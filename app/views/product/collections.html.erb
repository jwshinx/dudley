<div id="collections-wrapper">
  <div id="gallery">
    <div id="tn-row-1" class="sq-thumbnail-row">
      <ul class="thumbnails">
        <% unless @collections.nil? %>
          <% for collection in @collections do %>
            <li><%= link_to image_tag(collection.maintn),
                      :action => 'oneproduct', :id => collection %></li>
          <% end %>
        <% end %>
      </ul>
      <div id="text1">au naturel</div>
      <div id="text2">i do! i do!</div>
    </div> <!-- thumbnail-row -->
  </div> <!-- gallery -->
</div> <!-- collections-wrapper -->
